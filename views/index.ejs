  <script>
    const slides = document.querySelector('.slides');
    let currentSlide = 0;

    function updateSlide() {
      slides.style.transform = `translateX(-${currentSlide * 100}vw)`;
    }

    function nextSlide() {
      if (currentSlide < 1) {
        currentSlide++;
        updateSlide();
      }
    }

    function prevSlide() {
      if (currentSlide > 0) {
        currentSlide--;
        updateSlide();
      }
    }
  </script>
